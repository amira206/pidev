<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="500.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.pitest.Controllers.AjoutModificationParcoursController">

    <children>
        <Label layoutX="40.0" layoutY="30.0" text="Nom :" AnchorPane.leftAnchor="40.0" AnchorPane.topAnchor="30.0" />
        <TextField fx:id="nomField" layoutX="150.0" layoutY="25.0" prefWidth="200.0" AnchorPane.leftAnchor="150.0" AnchorPane.topAnchor="25.0" />

        <Label layoutX="40.0" layoutY="70.0" text="Pickup :" AnchorPane.leftAnchor="40.0" AnchorPane.topAnchor="70.0" />
        <TextField fx:id="pickupField" layoutX="150.0" layoutY="65.0" prefWidth="200.0" AnchorPane.leftAnchor="150.0" AnchorPane.topAnchor="65.0" />

        <Label layoutX="40.0" layoutY="110.0" text="Destination :" AnchorPane.leftAnchor="40.0" AnchorPane.topAnchor="110.0" />
        <TextField fx:id="destinationField" layoutX="150.0" layoutY="105.0" prefWidth="200.0" AnchorPane.leftAnchor="150.0" AnchorPane.topAnchor="105.0" />

        <Label layoutX="40.0" layoutY="150.0" text="Latitude Destination :" AnchorPane.leftAnchor="40.0" AnchorPane.topAnchor="150.0" />
        <TextField fx:id="latDestField" layoutX="150.0" layoutY="145.0" prefWidth="200.0" AnchorPane.leftAnchor="150.0" AnchorPane.topAnchor="145.0" />

        <Label layoutX="40.0" layoutY="190.0" text="Longitude Destination :" AnchorPane.leftAnchor="40.0" AnchorPane.topAnchor="190.0" />
        <TextField fx:id="lngDestField" layoutX="150.0" layoutY="185.0" prefWidth="200.0" AnchorPane.leftAnchor="150.0" AnchorPane.topAnchor="185.0" />

        <Label layoutX="40.0" layoutY="230.0" text="Latitude Pickup :" AnchorPane.leftAnchor="40.0" AnchorPane.topAnchor="230.0" />
        <TextField fx:id="latPickupField" layoutX="150.0" layoutY="225.0" prefWidth="200.0" AnchorPane.leftAnchor="150.0" AnchorPane.topAnchor="225.0" />

        <Label layoutX="40.0" layoutY="270.0" text="Longitude Pickup :" AnchorPane.leftAnchor="40.0" AnchorPane.topAnchor="270.0" />
        <TextField fx:id="lngPickupField" layoutX="150.0" layoutY="265.0" prefWidth="200.0" AnchorPane.leftAnchor="150.0" AnchorPane.topAnchor="265.0" />

        <Label layoutX="40.0" layoutY="310.0" text="Distance (km) :" AnchorPane.leftAnchor="40.0" AnchorPane.topAnchor="310.0" />
        <TextField fx:id="distanceField" layoutX="150.0" layoutY="305.0" prefWidth="200.0" AnchorPane.leftAnchor="150.0" AnchorPane.topAnchor="305.0" />

        <Label layoutX="40.0" layoutY="350.0" text="Temps (min) :" AnchorPane.leftAnchor="40.0" AnchorPane.topAnchor="350.0" />
        <TextField fx:id="timeField" layoutX="150.0" layoutY="345.0" prefWidth="200.0" AnchorPane.leftAnchor="150.0" AnchorPane.topAnchor="345.0" />

        <Button fx:id="saveButton" layoutX="150.0" layoutY="400.0" text="Enregistrer" onAction="#saveParcours" AnchorPane.leftAnchor="150.0" AnchorPane.topAnchor="400.0" />
        <Button layoutX="280.0" layoutY="400.0" text="Annuler" onAction="#closeWindow" AnchorPane.leftAnchor="280.0" AnchorPane.topAnchor="400.0" />
    </children>
</AnchorPane>
