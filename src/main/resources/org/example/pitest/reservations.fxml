<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.pitest.Controllers.ReservationController"
      spacing="20"
      alignment="CENTER"
      prefWidth="300"
      prefHeight="200"
      style="-fx-padding: 20; -fx-background-color: #f0f0f0;">

    <Button text="Reserver"
            fx:id="btnReserver"
            onAction="#handleReserver"
            style="-fx-font-size: 14px; -fx-pref-width: 120px; -fx-background-color: #4CAF50; -fx-text-fill: white;"/>

</VBox>