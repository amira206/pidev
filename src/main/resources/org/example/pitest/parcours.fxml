                        <TableColumn fx:id="editColumn" minWidth="60.0" prefWidth="70.0" text="Modifier" />
                        <TableColumn fx:id="deleteColumn" minWidth="60.0" prefWidth="70.0" text="Supprimer" />
                    </columns>
                </TableView>
            </children>
        </VBox>
    </children>
