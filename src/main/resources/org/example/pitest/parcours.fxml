        <VBox alignment="TOP_CENTER" layoutX="0.0" layoutY="0.0" prefHeight="666.0" prefWidth="753.0" spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <padding>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
            </padding>
            <children>
                <Label text="Gestion des Parcours" textAlignment="CENTER">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>

                <HBox alignment="CENTER_LEFT" spacing="20.0">
                    <children>
                        <TextField fx:id="filterField" prefHeight="30.0" prefWidth="250.0" promptText="Rechercher un parcours...">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </TextField>
                        <Button mnemonicParsing="false" onAction="#ouvrirAjoutModification" prefHeight="30.0" text="Ajouter un parcours">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Button>
                    </children>
                    <padding>
                        <Insets bottom="10.0" top="10.0" />
                    </padding>
                </HBox>

                <TableView fx:id="tableau" prefHeight="550.0" prefWidth="723.0" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="id" minWidth="40.0" prefWidth="40.0" text="ID" />
                        <TableColumn fx:id="name" minWidth="80.0" prefWidth="100.0" text="Nom" />
                        <TableColumn fx:id="pickup" minWidth="90.0" prefWidth="100.0" text="Départ" />
                        <TableColumn fx:id="destination" minWidth="90.0" prefWidth="100.0" text="Destination" />
